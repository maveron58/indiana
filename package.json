{
  "name": "indiana",
  "scripts": {
    "build": "babel js -d babel_generated && browserify babel_generated/main.js -t babelify --outfile web/static/js/main.js",
    "watch": "onchange 'js/**/*.js' -- npm run build"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "comments": false
        }
      ]
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-preset-es2015": "^6.16.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "onchange": "^3.0.2",
    "bower": "^1.8.0"
  }
}
